<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %} {% if section.settings.background == true %} layer-background {% endif  %} {% if section.settings.top_margin %} margin-top{% endif %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.feature_advert_design %}
          </div>
        </div>
        <div class="view-link">
          <a href="{{ section.settings.view_link }}">{{ section.settings.view_link_text }}</a>
        </div>
      </div>
    </div>    
  </div>
</div>    
<style>
  {% if section.settings.background %}
  {% if section.settings.bg-image != blank %}
  #shopify-section-{{section.id }} .layer-background {
    background-image: url('{{ section.settings.bg-image | img_url: 'master' }}');
      }
  {% else -%}
  #shopify-section-{{section.id }} .layer-background {
    background: {{ section.settings.background_color }};
  }
  {%- endif %}
  {%- endif %}
</style>
{% schema %}
{
  "name": "Ad banner section",
  "class": "index-section index-section--flush",
  "max_blocks": 6,
  "settings": [
    {
    "type": "select",
    "id": "feature_advert_design",
    "label": "Select Design",
    "options": [
	  {
        "value": "feature-advert1",
        "label": "Design 1 (Single image)"
      },
	  {
        "value": "feature-advert2",
        "label": "Design 2 (Two images)"
      },
	  {
        "value": "feature-advert2alt",
        "label": "Design 2 Alt (Two images)"
      },
      {
      "value": "feature-advert3",
      "label": "Design 3 (Three images )"
      },
      {
      "value": "feature-advert3alt",
      "label": "Design 3 (Three images alt )"
      }
    ],
    "default": "feature-advert2"
    },
	{
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Set Div fullwidth?",
      "default": true
    },
   {
      "type": "text",
      "id": "view_link_text",
      "label": "View Link Text"
    },
    {
      "type": "url",
      "id": "view_link",
      "label": "Link URL"
    },
	{
      "type": "checkbox",
      "id": "background",
      "label": "Add Background",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Sections Background Color",
      "info": "This option allows you to set different background color than default one for the section.",
      "default": "#14151b"
    },
	{
      "type": "image_picker",
      "id": "bg-image",
      "label": "Sections Background Image",
      "info": "If empty then background color will be applied."
    },
    {
      "type": "checkbox",
      "id": "top_margin",
      "label": "Add top margin?",
      "info": "White empty space above section. Won't apply when full width option enabled.",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "bottom_padding",
      "label": "Add bottom margin?",
      "info": "White empty space below section. Won't apply when full width option enabled.",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "bottom_border",
      "label": "Add bottom border?",
      "info": "Border line below section",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "ad image"
        },
		{
          "type": "text",
          "id": "topheading",
          "label": "Top Heading"
        },
        {
          "type": "color",
          "id": "topheading_color",
          "label": "Top Heading Color",
          "default": "#fff"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Main Heading"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#ffde00"
        },
		{
          "type": "textarea",
          "id": "description",
          "label": "Slide Description"
        },
        {
          "type": "color",
          "id": "description_color",
          "label": "Description Color",
          "default": "#fff"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
		},
        {
          "type": "color",
          "id": "link_color",
          "label": "Link Color",
          "default": "#383838"
        },
		{
        "type": "select",
        "id": "ad_align",
        "label": "Align",
        "options": [
              {
              "value": "left",
              "label": "left"
              },
              {
              "value": "center",
              "label": "center"
              },
              {
              "value": "right",
              "label": "right"
              }
            ],
        "default": "center"	
        }
      ]
    }
  ],
  "presets": [{
    "name": "Ad banner section",
    "category": "Image",
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
}
{% endschema %}