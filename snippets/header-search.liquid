{% assign layout = section.settings.header_layout | strip %}
<div id="search" class="input-group">
  {% if section.settings.header_layout != 'header-3' %}
  <div class="btn-group">
    <div class="dropdown-toggle search-button" data-toggle="dropdown"></div>
    {% endif %}
    <div class="dropdown-menu search-content" >
      <input type="text" name="q" id="text-search" value="{{ search.terms | escape }}" placeholder="{{ 'layout.search_bar.placeholder' | t }}" class="form-control input-lg" aria-label="{{ 'layout.search_bar.placeholder' | t }}" />
      <ul class="search-results" style="display:none";></ul>
      <span class="input-group-btn">
        <button type="button" class="btn btn-default btn-lg"></button>
      </span>
    </div>
    {% if section.settings.header_layout != 'header-3' %}
  </div>
  {% endif %}
</div>